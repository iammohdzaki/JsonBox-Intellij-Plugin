<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.zaki.jsonbox</id>
    <name>JsonBox</name>
    <vendor>Mohammad Zaki</vendor>
    <description>A handy IntelliJ plugin to format, minify, stringify, and diff JSON effortlessly â€” all within your editor.</description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.json</depends>

    <actions>
        <group id="JsonBoxGroup" text="JsonBox" description="Open a JSON file in JsonBox" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="JsonBox.ShowPopupAction"
                    class="com.github.iammohdzaki.jsonbox.actions.OpenJsonParserDialogAction"
                    text="Open JsonBox"
                    description="Open JsonBox popup to format, minify, stringify or diff JSON"/>
        </group>
    </actions>
    <extensions defaultExtensionNs="com.intellij">
        <editorNotificationProvider
                implementation="com.github.iammohdzaki.jsonbox.notification.JsonBoxNotificationProvider"/>
    </extensions>
</idea-plugin>
